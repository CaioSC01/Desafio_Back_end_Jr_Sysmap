@model List<TarefaModel>
@{
    ViewData["Title"] = "Gerenciar Tarefas";
}

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Tarefas" asp-action="Criar">Adicionar uma tarefa</a>
    </div>
        <br/>
    <h1 class="display-4"> Gerenciar Tarefas</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">id</th>
                <th scope="col">Descrição</th>
                <th scope="col">Data/Hora</th>
                <th scope="col"></th>

            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any()){
                foreach(var tarefa in Model)
                {
            <tr>
                <th scope="row">@tarefa.id</th>
                <td>@tarefa.Descricao</td>
                <td>@tarefa.Data_Hora</td>
                <td>
                    <div class="btn-group" role="group">
                        <a role="button" class="btn btn-primary" asp-route-id="@tarefa.id" asp-controller="Tarefas" asp-action="Editar">Editar</a>

                        <a role="button" class="btn btn-danger" asp-route-id="@tarefa.id" asp-controller="Tarefas" asp-action="ApagarConfirmacao">Apagar</a>
                    </div>
                </td>

            </tr>
                }
            }
            

        </tbody>
    </table>

</div>

