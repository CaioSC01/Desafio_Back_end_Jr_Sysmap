@model TarefaModel
@{
    ViewData["Title"] = "Editar Tarefas";
}

<div class="text-center">

    <h1 class="display-4"> Editar Tarefas</h1>

</div>
<form asp-controller="Tarefas" asp-action="Alterar" method="post">
    <input type="hidden" asp-for="id"/>
    <div class="form-group">
        <label for="descricao">Descrição</label>
        <input type="text" asp-for="Descricao" class="form-control" placeholder="Digite uma Descrição...">
    </div>
    <div class="form-group">
        <label for="data/hora">Data e Hora</label>
        <input type="datetime-local" asp-for="Data_Hora" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Alterar</button>
    <a class="btn btn-secondary" asp-controller="Tarefas" asp-action="Index" role="button">Voltar</a>
</form>

