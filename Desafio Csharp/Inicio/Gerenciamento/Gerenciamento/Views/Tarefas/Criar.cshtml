@{
    ViewData["Title"] = "Criar Tarefas";
}

<div class="text-center">
    
    <h1 class="display-4"> Cadastrar Tarefas</h1>
    
</div>
<form>
    <div class="form-group">
        <label for="descricao">Descrição</label>
        <input type="text" class="form-control" placeholder="Digite uma Descrição...">
    </div>
    <div class="form-group">
        <label for="data/hora">Data e Hora</label>
        <input type="datetime-local" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Adicionar</button>
    <a  class="btn btn-secondary" asp-controller="Tarefas" asp-action="Index" role="button">Voltar</a>
</form>

